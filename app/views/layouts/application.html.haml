!!!
%html
  %head
    %title Granger
    = stylesheet_link_tag    "application"
    = stylesheet_link_tag    "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Rancho"
    = yield :javascript
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header
      %h1
        %a{:href => '/'}
          Granger
      %ul.unstyled.lineal.user
        - if user_signed_in?
          %li
            %a{:href => user_path(current_user)}
              %img#profile_avatar{:src => gravatar_image(current_user)}
          %li
            %a.btn.primary{:href => '/near_by'}
              Explorar
        - else
          %li
            %a.btn.primary{:href => sign_in_path}
              Entrar
          %li
            %a.btn.success{:href => new_user_registration_path}
              Registrarse
    #body
      = yield